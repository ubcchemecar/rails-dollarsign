<h1>Records</h1>
<br>

<%= link_to 'Request Item', new_record_path %>

<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Item</th>
      <th>Date</th>
      <th>Requested By</th>
      <th>Description</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Supplier</th>
      <th>Link</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.item %></td>
        <td><%= record.created_at.strftime("%d %b %Y") %></td>
        <td><%= record.user_name %></td>
        <td><%= record.description %></td>
        <td><%= number_to_currency(record.price) %></td>
        <td><%= record.quantity %></td>
        <td><%= record.supplier %></td>
        <td><%= record.link %></td>
        <td>
        <% if record.status == "pending" %>
          <p class="bg-warning">
        <% elsif record.status == "reviewed" %>
          <p class="bg-primary">
        <% elsif record.status == "approved" %>
          <p class="bg-success">
        <% elsif record.status == "rejected" %>
          <p class="bg-danger">
        <% end %>
        <%= record.status.capitalize %></p>
        </td>
        <td>
          <%= link_to 'Details', record %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
