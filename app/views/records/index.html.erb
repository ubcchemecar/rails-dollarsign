<h1>Records | <small><%= link_to 'Request Item', new_record_path %></small></h1>
<hr>

<p>
Show: 
<%= link_to 'All Items', action:"index" %> | 
<span class="bg-warning"><%= link_to 'Pending', action:"index", status: 'pending' %></span> |
<span class="bg-info"><%= link_to 'Reviewed', action:"index", status: 'reviewed' %></span> |
<span class="bg-success"><%= link_to 'Approved', action:"index", status: 'approved' %></span> |
<span class="bg-danger"><%= link_to 'Rejected', action:"index", status: 'rejected' %></span>
</p>

<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Item</th>
      <th>Date</th>
      <th>Requested By</th>
      <th>Description</th>
      <th>Category</th>
      <th>Supplier</th>
      <th>Total Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.item %></td>
        <td><%= record.created_at.strftime("%d %b %Y") %></td>
        <td><%= record.user_name %></td>
        <td><%= record.description %></td>
        <td><%= record.category.capitalize %></td>
        <td><%= record.supplier %></td>
        <td><%= number_to_currency(record.price*record.quantity) %></td>
        <td>
        <% if record.status == "pending" %>
          <p class="bg-warning">
        <% elsif record.status == "reviewed" %>
          <p class="bg-info">
        <% elsif record.status == "approved" %>
          <p class="bg-success">
        <% elsif record.status == "rejected" %>
          <p class="bg-danger">
        <% end %>
        <%= record.status.capitalize %></p>
        </td>
        <td>
          <b><%= link_to 'Details', record %></b>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
